<div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 masonry">
    <div class="product">
        <div class="photo">
            <a href="{{ path("shop_product_show", { "product_slug": product.slug }) }}">
                {% if product.primaryPhoto %}
                    <img src="{{ asset(podorozhny_uploader_relative_path ~ product.primaryPhoto.path ) }}" alt="{{ product.name }}" class="img-responsive" />
                {% else %}
                    <h3 class="text-center">Нет фото</h3>
                {% endif %}
            </a>
        </div>
        <div class="name text-center">
            <a href="{{ path("shop_product_show", { "product_slug": product.slug }) }}">
                {{ product.name }}
            </a>
        </div>
        <div class="footer clearfix">
            <span class="price pull-left">{{ product.price|money_rub }}</span>
            <a class="btn btn-xs btn-primary pull-right" role="button" href="javascript:alert('Типа добавилось в корзину))))000')"><i class="fa fa-sm fa-fw fa-shopping-cart"></i> Add to cart</a>
        </div>
    </div>
</div>